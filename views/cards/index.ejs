<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/materialize.ejs'); %>
    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
    <title>Exp Card Index | Your Cards</title>
</head>

<body>
    <header class="deep-orange lighten-3 ">
        <h1 class="center-align white-text" id="headerTitle">Exp Cards Index</h1>
    </header>
    <main>
        <nav class="nav-wrapper orange lighten-4">
            <div class="container">

                <a href="#" class="sidenav-trigger" data-target="mobile-links">
                    <i class="material-icons">menu</i>
                </a>

                <ul class="right hide-on-med-and-down">
                    <li>

                        <a class="btn blue-grey lighten-1" href="/">Dashboard</a>
                    </li>
                    <li>
                        <a class="btn blue-grey lighten-1" href="/decks">Your Decks</a>
                    </li>
                    <li>
                        <a class="btn blue-grey lighten-1" href="/cards/new">Add New Card</a>
                    </li>
                    <li>
                        <form action="/sessions?_method=DELETE" method="POST">
                            <input class="btn blue-grey lighten-1" type="submit" value="Log Out">

                    </li>
                    </form>

                </ul>
            </div>
        </nav>
        <ul class="sidenav" id="mobile-links">
            <li>

                <a class="btn blue-grey lighten-1" href="/">Dashboard</a>
            </li>
            <li>
                <a class="btn blue-grey lighten-1" href="/decks">Your Decks</a>
            </li>
            <li>
                <a class="btn blue-grey lighten-1" href="/cards/new">Add New Card</a>
            </li>
            <li>
                <form action="/sessions?_method=DELETE" method="POST">
                    <input class="btn blue-grey lighten-1" type="submit" value="Log Out">

            </li>
            </form>

        </ul>

        <div class="container">


            <div class="row">

                <% cards.forEach(card => { %>

                <div class="col s12 m6 l4">
                    <div class="card  <%=card.time%>Card">
                        <div class="card-texture">
                            <div class="card-image card-image-<%=card.time%>">
                                <a href="/cards/<%=card._id%>">
                                    <img class="indexImgs" src="<%=card.coverPhoto%>" alt="<%=card.title%>">
                                </a>
                                <p class="halfway-fab btn-floating"> <i class="large material-icons <%=card.type%>Icon">
                                        <% if (card.type === "nature") { %>
                                        park
                                        <% } else { %>
                                        apartment
                                        <%}%>
                                    </i></p>
                            </div>
                              
                                    <span class="card-title">
                                        <%=card.title%>
                                    </span>
                                    
                                    <br>
                                    <br>
                             
                                <div class="card-action">
                                    <a class="btn-small purple" href="/decks">Deck <i class="material-icons right">add</i></a>
                                    <a class="btn-small pink"href="/decks">Favorites <i class="material-icons right">add</i></a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <% }) %>

                                </div>
                            </div>






    </main>






    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.sidenav').sidenav();
        })
    </script>
</body>

</html>